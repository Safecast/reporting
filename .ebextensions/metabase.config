option_settings:
  aws:elasticbeanstalk:application:environment:
    MB_DB_TYPE: postgres
    MB_DB_DBNAME: metabase
    MB_DB_PORT: 5432
    MB_DB_USER: metabase

files:
  "/etc/init/metabase.conf":
    content: |
      description "Metabase reporting engine"

      start on runlevel [2345]
      stop on runlevel [!2345]

      respawn
      respawn limit 15 5

      script
        source /opt/elasticbeanstalk/support/envvars
        exec /usr/bin/java -jar /opt/metabase.jar >>/var/log/metabase.log 2>&1
      end script

  "/etc/logrotate.d/metabase":
    content: |
      /var/log/metabase.log {
        copytruncate
        daily
        compress
        missingok
        notifempty
      }

  "/etc/httpd/conf.d/metabase.conf":
    content: |
      <VirtualHost *:80>
        ServerName        metabase.safecast.cc
        ProxyPreserveHost On
        ProxyPass         "/" "http://localhost:3000/"
        ProxyPassReverse  "/" "http://localhost:3000/"
      </VirtualHost>

container_commands:
  install_metabase:
    command: ./scripts/install_metabase.sh
